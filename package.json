{
  "name": "graphql-server-demo-node-ts",
  "version": "1.1.1",
  "main": "index.ts",
  "author": "crown <chenjuncrown@gmail.com>",
  "repository": "git@github.com:crown3/GraphQL-Server-Node-TS.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx src",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec yarn dev",
    "generate-resolvers": "graphql-resolver-codegen interfaces -s src/schema.graphql -o src/generated/resolvers.ts"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "src/*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-yoga": "^1.18.1",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^1.34.1",
    "prisma-client-lib": "^1.34.1",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.7",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "graphql-resolver-codegen": "0.3.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "semantic-release": "^17.2.3",
    "ts-node": "^8.1.0"
  }
}
